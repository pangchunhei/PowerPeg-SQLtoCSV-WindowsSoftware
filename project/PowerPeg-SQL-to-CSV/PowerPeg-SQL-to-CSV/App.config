<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!-- Save in the bin debug -->

  <!--log tutorial https://www.youtube.com/watch?v=2lAdQ_QwNww-->
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>
    <!--Log to where and how-->
    <appender name="DebugAppender" type="log4net.Appender.DebugAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%logger] %level - %message%newline%exception"/>
      </layout>
    </appender>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <rollingStyle value="Composite" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="50" />
      <maximumFileSize value="10MB" />
      <datePattern value="'log_'yyyy-MM-dd"/>
      <preserveLogFileNameExtension value="true" />
      <staticLogFileName value="false" />
      <file type="log4net.Util.PatternString" value="logs\\.log" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level%message%exception - [%logger] %newline" />
      </layout>
    </appender>
    <root>
      <!--Log the this level or above-->
      <level value="DEBUG"/>
      <appender-ref ref="DebugAppender" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>

  <appSettings>
    <add key="Address" value="DELL-INSPIRON14" />
    <add key="Catalog" value="mainDB" />
    <add key="Username" value="" />
    <add key="Password" value="" />
    <add key="JSON" value="scheduledTask.json" />
    <add key="Log" value="log\"/>
  </appSettings>
</configuration>